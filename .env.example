# ===========================================
# MCP Ralph Workflow - Environment Variables
# ===========================================

# Environment
NODE_ENV=development
LOG_LEVEL=debug

# ===========================================
# LLM Providers (at least one required)
# ===========================================
ANTHROPIC_API_KEY=sk-ant-api03-...
OPENAI_API_KEY=sk-...
DEFAULT_LLM_PROVIDER=anthropic

# ===========================================
# Redis (for state and queue)
# ===========================================
REDIS_URL=redis://localhost:6379

# ===========================================
# PostgreSQL (for history and audit)
# Matches docker/docker-compose.yml defaults
# ===========================================
DATABASE_URL=postgresql://ralph:ralph_dev_password@localhost:5432/mcp_ralph

# ===========================================
# Workflow Limits
# ===========================================
MAX_ITERATIONS_LIMIT=50
DEFAULT_SCORE_THRESHOLD=0.85
MAX_COST_PER_WORKFLOW_USD=1.00

# ===========================================
# LLM Configuration
# ===========================================
LLM_TIMEOUT_MS=60000
CACHE_TTL_SECONDS=3600

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_REQUESTS_PER_MINUTE=10
RATE_LIMIT_BURST=5

# ===========================================
# Observability (Optional)
# ===========================================
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_SERVICE_NAME=mcp-ralph-workflow

# ===========================================
# Security
# ===========================================
MAX_INPUT_SIZE_BYTES=10240
MAX_CRITERIA_COUNT=20
